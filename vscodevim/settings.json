    "workbench.colorTheme": "Codey Midnight",
    "vim.leader": "<space>",
    "vim.hlsearch": true,
    "vim.useSystemClipboard": true,
    "vim.smartRelativeLine": true,
    "vim.easymotion": true,
    "vim.useCtrlKeys": false,
    "vim.normalModeKeyBindings": [
        {
            "before": ["i"],
            "after": ["<up>"]
        },
        {
            "before": ["k"],
            "after": ["<down>"]
        },
        {
            "before": ["j"],
            "after": ["<left>"]
        },
        {
            "before": ["l"],
            "after": ["<right>"]
        },
        {
            "before": ["<leader>", "i"],
            "after": ["<insert>"]
        },
        {
            "before": ["K"],
            "commands": ["editor.action.showHover"]
        }
    ],
    "vim.visualModeKeyBindings": [
        {
            "before": ["i"],
            "after": ["<up>"]
        },
        {
            "before": ["k"],
            "after": ["<down>"]
        },
        {
            "before": ["j"],
            "after": ["<left>"]
        },
        {
            "before": ["l"],
            "after": ["<right>"]
        }
    ],
    "vim.insertModeKeyBindings": [
         {
             "before": ["j", "j"],
             "after": ["<esc>" , "<right>"]
         }
    ]
